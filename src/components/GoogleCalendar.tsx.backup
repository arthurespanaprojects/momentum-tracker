import { useEffect, useRef, useState } from 'react';
import FullCalendar from '@fullcalendar/react';
import dayGridPlugin from '@fullcalendar/daygrid';
import timeGridPlugin from '@fullcalendar/timegrid';
import listPlugin from '@fullcalendar/list';
import googleCalendarPlugin from '@fullcalendar/google-calendar';
import interactionPlugin from '@fullcalendar/interaction';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogDescription } from '@/components/ui/dialog';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
import { Label } from '@/components/ui/label';
import { useGoogleCalendar } from '@/hooks/useGoogleCalendar';
import { useToast } from '@/components/ui/use-toast';
import './GoogleCalendar.css';

interface GoogleCalendarProps {
  apiKey: string;
  calendarIds: string[];
  clientId: string;
}

interface EventInfo {
  id?: string;
  calendarId?: string;
  title: string;
  start: string;
  end?: string;
  description?: string;
  location?: string;
  isTask?: boolean;
  completed?: boolean;
}

interface EventFormData {
  title: string;
  description: string;
  location: string;
  startTime: string;
  endTime: string;
  isTask: boolean;
}

export function GoogleCalendar({ apiKey, calendarIds, clientId }: GoogleCalendarProps) {
  const calendarRef = useRef<FullCalendar>(null);
  const { toast } = useToast();
  const googleAuth = useGoogleCalendar(clientId);
  
  const [error, setError] = useState<string | null>(null);
  const [selectedEvent, setSelectedEvent] = useState<EventInfo | null>(null);
  const [showEventDialog, setShowEventDialog] = useState(false);
  const [selectedDate, setSelectedDate] = useState<Date | null>(null);
  const [showAddDialog, setShowAddDialog] = useState(false);
  const [isSubmitting, setIsSubmitting] = useState(false);
  
  const [formData, setFormData] = useState<EventFormData>({
    title: '',
    description: '',
    location: '',
    startTime: '',
    endTime: '',
    isTask: false
  });

  useEffect(() => {
    console.log('üîë Google Calendar API Key:', apiKey ? `${apiKey.substring(0, 20)}...` : 'NO CONFIGURADA');
    console.log('üìÖ Calendarios configurados:', calendarIds);
    
    if (!apiKey || apiKey === 'PEGA_AQUI_TU_API_KEY') {
      setError('‚ö†Ô∏è Falta configurar VITE_GOOGLE_CALENDAR_API_KEY en el archivo .env');
    } else if (calendarIds.length === 0) {
      setError('‚ö†Ô∏è No hay calendarios configurados');
    } else {
      setError(null);
    }
  }, [apiKey, calendarIds]);

  const handleEventClick = (info: any) => {
    // IMPORTANTE: Prevenir navegaci√≥n a Google Calendar
    info.jsEvent.preventDefault();
    info.jsEvent.stopPropagation();
    
    const event = info.event;
    const isTask = event.extendedProps.eventType === 'task' || !event.start;
    
    // Extraer calendarId de la URL del evento en _def
    let calendarId = calendarIds[1] || calendarIds[0]; // Default: secundario
    
    if (event._def?.url) {
      const url = event._def.url;
      // La URL contiene algo como "kusukasa01@gmail.com" o el hash del calendario
      calendarIds.forEach(id => {
        if (url.includes(encodeURIComponent(id)) || url.includes(id)) {
          calendarId = id;
        }
      });
    }
    
    // Limpiar el ID del evento (quitar el sufijo del calendario si existe)
    let eventId = event.id;
    if (eventId.includes('_')) {
      eventId = eventId.split('_')[0];
    }
    
    console.log('Evento clickeado:', {
      originalId: event.id,
      cleanId: eventId,
      detectedCalendarId: calendarId,
      url: event._def?.url,
      title: event.title,
      allCalendarIds: calendarIds
    });
    
    setSelectedEvent({
      id: eventId,
      calendarId,
      title: event.title,
      start: event.start?.toISOString() || '',
      end: event.end?.toISOString(),
      description: event.extendedProps.description || 'Sin descripci√≥n',
      location: event.extendedProps.location || '',
      isTask,
      completed: event.extendedProps.status === 'completed'
    });
    setShowEventDialog(true);
  };

  const handleDateClick = (info: any) => {
    const date = info.date;
    setSelectedDate(date);
    
    // Inicializar formulario con fecha seleccionada (formato YYYY-MM-DD para tareas)
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const day = String(date.getDate()).padStart(2, '0');
    const dateStr = `${year}-${month}-${day}`;
    
    setFormData({
      title: '',
      description: '',
      location: '',
      startTime: dateStr,
      endTime: dateStr,
      isTask: true
    });
    
    setShowAddDialog(true);
  };

  const handleCreateEvent = async () => {
    if (!googleAuth.isSignedIn) {
      toast({
        title: 'No autenticado',
        description: 'Por favor inicia sesi√≥n primero',
        variant: 'destructive'
      });
      return;
    }

    if (!formData.title.trim()) {
      toast({
        title: 'Error',
        description: 'El t√≠tulo es obligatorio',
        variant: 'destructive'
      });
      return;
    }

    setIsSubmitting(true);
    try {
      // Usar el calendario secundario (ArthursMomentum) para nuevos eventos
      const calendarId = calendarIds[1] || calendarIds[0];
      
      console.log('Datos del formulario:', formData);
      console.log('T√≠tulo:', formData.title, 'Es undefined?', formData.title === undefined);
      
      if (!formData.title || formData.title.trim() === '') {
        toast({
          title: 'Error',
          description: 'El t√≠tulo es obligatorio',
          variant: 'destructive'
        });
        setIsSubmitting(false);
        return;
      }
      
      const event = {
        summary: formData.title.trim(),
        description: formData.description || '',
        start: {
          date: formData.startTime,
          timeZone: 'America/La_Paz'
        },
        end: {
          date: formData.startTime,
          timeZone: 'America/La_Paz'
        }
      };

      console.log('Evento a crear:', event);

      await googleAuth.createEvent(calendarId, event);
      
      toast({
        title: '‚úì Tarea creada',
        description: 'La tarea se ha agregado al calendario'
      });
      
      setShowAddDialog(false);
      
      // Refrescar calendario
      if (calendarRef.current) {
        calendarRef.current.getApi().refetchEvents();
      }
    } catch (error) {
      console.error('Error creando evento:', error);
      toast({
        title: 'Error',
        description: 'No se pudo crear el evento',
        variant: 'destructive'
      });
    } finally {
      setIsSubmitting(false);
    }
  };

  const handleCompleteTask = async () => {
    if (!googleAuth.isSignedIn || !selectedEvent?.id || !selectedEvent?.calendarId) return;

    setIsSubmitting(true);
    try {
      await googleAuth.updateEvent(selectedEvent.calendarId, selectedEvent.id, {
        status: 'completed'
      } as any);
      
      toast({
        title: '‚úì Tarea completada',
        description: 'La tarea ha sido marcada como completada'
      });
      
      setShowEventDialog(false);
      
      // Refrescar calendario
      if (calendarRef.current) {
        calendarRef.current.getApi().refetchEvents();
      }
    } catch (error) {
      console.error('Error completando tarea:', error);
      toast({
        title: 'Error',
        description: 'No se pudo completar la tarea',
        variant: 'destructive'
      });
    } finally {
      setIsSubmitting(false);
    }
  };

  const handleEditEvent = () => {
    if (!selectedEvent) return;
    
    setFormData({
      title: selectedEvent.title,
      description: selectedEvent.description || '',
      location: selectedEvent.location || '',
      startTime: selectedEvent.start ? new Date(selectedEvent.start).toISOString().slice(0, 16) : '',
      endTime: selectedEvent.end ? new Date(selectedEvent.end).toISOString().slice(0, 16) : '',
      isTask: selectedEvent.isTask || false
    });
    
    setShowEventDialog(false);
    setShowAddDialog(true);
  };

  const handleUpdateEvent = async () => {
    if (!googleAuth.isSignedIn) {
      toast({
        title: 'Error',
        description: 'Debes iniciar sesi√≥n para editar eventos',
        variant: 'destructive'
      });
      return;
    }

    if (!selectedEvent?.id) {
      console.error('No hay ID de evento:', selectedEvent);
      toast({
        title: 'Error',
        description: 'No se pudo obtener el ID del evento',
        variant: 'destructive'
      });
      return;
    }

    if (!selectedEvent?.calendarId) {
      console.error('No hay Calendar ID:', selectedEvent);
      toast({
        title: 'Error',
        description: 'No se pudo identificar el calendario',
        variant: 'destructive'
      });
      return;
    }

    if (!formData.title.trim()) {
      toast({
        title: 'Error',
        description: 'El t√≠tulo es obligatorio',
        variant: 'destructive'
      });
      return;
    }

    setIsSubmitting(true);
    try {
      const event = {
        summary: formData.title,
        description: formData.description,
        start: {
          date: formData.startTime,
          timeZone: 'America/La_Paz'
        },
        end: {
          date: formData.startTime,
          timeZone: 'America/La_Paz'
        }
      };

      await googleAuth.updateEvent(selectedEvent.calendarId, selectedEvent.id, event as any);
      
      toast({
        title: '‚úì Tarea actualizada',
        description: 'Los cambios se han guardado'
      });
      
      setShowAddDialog(false);
      setSelectedEvent(null);
      
      // Refrescar calendario
      if (calendarRef.current) {
        calendarRef.current.getApi().refetchEvents();
      }
    } catch (error: any) {
      console.error('Error actualizando evento:', error);
      const errorMsg = error?.result?.error?.message || error?.message || 'No se pudo actualizar el evento';
      toast({
        title: 'Error',
        description: errorMsg,
        variant: 'destructive'
      });
    } finally {
      setIsSubmitting(false);
    }
  };

  const handleDeleteEvent = async () => {
    if (!googleAuth.isSignedIn || !selectedEvent?.id || !selectedEvent?.calendarId) return;

    if (!confirm('¬øEst√°s seguro de eliminar este evento?')) return;

    setIsSubmitting(true);
    try {
      await googleAuth.deleteEvent(selectedEvent.calendarId, selectedEvent.id);
      
      toast({
        title: '‚úì Eliminado',
        description: 'El evento ha sido eliminado'
      });
      
      setShowEventDialog(false);
      
      // Refrescar calendario
      if (calendarRef.current) {
        calendarRef.current.getApi().refetchEvents();
      }
    } catch (error) {
      console.error('Error eliminando evento:', error);
      toast({
        title: 'Error',
        description: 'No se pudo eliminar el evento',
        variant: 'destructive'
      });
    } finally {
      setIsSubmitting(false);
    }
  };

  if (error) {
    return (
      <div className="p-8 text-center">
        <div className="text-destructive text-lg font-semibold mb-2">{error}</div>
        <div className="text-muted-foreground text-sm">
          Verifica tu configuraci√≥n y reinicia el servidor con: npm run dev
        </div>
      </div>
    );
  }

  return (
    <>
      <div className="flex items-center justify-between mb-4">
        <div className="text-sm text-muted-foreground">
          {googleAuth.isSignedIn ? (
            <span className="flex items-center gap-2">
              <span className="w-2 h-2 bg-green-500 rounded-full"></span>
              Conectado: {googleAuth.userEmail}
            </span>
          ) : (
            <span className="text-amber-500">Sin conectar - Solo lectura</span>
          )}
        </div>
        {googleAuth.isInitialized && (
          <Button
            variant={googleAuth.isSignedIn ? "outline" : "default"}
            size="sm"
            onClick={googleAuth.isSignedIn ? googleAuth.signOut : googleAuth.signIn}
          >
            {googleAuth.isSignedIn ? 'Cerrar sesi√≥n' : 'Conectar Google Calendar'}
          </Button>
        )}
      </div>
      <div className="google-calendar-container">
        <FullCalendar
          ref={calendarRef}
          plugins={[dayGridPlugin, googleCalendarPlugin, interactionPlugin]}
          initialView="dayGridMonth"
          headerToolbar={{
            left: 'prev,next today',
            center: 'title',
            right: ''
          }}
          googleCalendarApiKey={apiKey}
          eventSources={calendarIds.map(id => ({
            googleCalendarId: id,
          }))}
          eventSourceFailure={(error) => {
            console.warn('‚ö†Ô∏è Error cargando un calendario:', error);
          }}
          eventClick={handleEventClick}
          eventDidMount={(info) => {
            // Quitar el enlace de Google Calendar
            const link = info.el.querySelector('a');
            if (link) {
              link.removeAttribute('href');
              link.style.cursor = 'pointer';
            }
          }}
          height="auto"
          locale="es"
          firstDay={1}
          timeZone="America/La_Paz"
          buttonText={{
            today: 'Hoy',
            month: 'Mes'
          }}
          eventTimeFormat={{
            hour: '2-digit',
            minute: '2-digit',
            hour12: false
          }}
          displayEventTime={false}
          displayEventEnd={false}
          nowIndicator={true}
          editable={false}
          selectable={true}
          dateClick={handleDateClick}
          dayMaxEvents={false}
          weekends={true}
          fixedWeekCount={false}
          aspectRatio={1.8}
          eventClassNames={(arg) => {
            const classes = [];
            if (arg.event.extendedProps.status === 'completed') {
              classes.push('fc-event-completed');
            }
            if (arg.event.extendedProps.eventType === 'task') {
              classes.push('fc-event-task');
            }
            return classes;
          }}
          loading={(isLoading) => {
            if (isLoading) {
              console.log('Cargando eventos del calendario...');
            }
          }}
        />
      </div>

      <Dialog open={showEventDialog} onOpenChange={setShowEventDialog}>
        <DialogContent className="max-w-2xl">
          <DialogHeader>
            <DialogTitle className="text-2xl flex items-center gap-2">
              {selectedEvent?.isTask && (selectedEvent?.completed ? '‚úÖ' : '‚òê')}
              {selectedEvent?.title}
            </DialogTitle>
          </DialogHeader>
          <div className="space-y-4 mt-4">
                {selectedEvent?.isTask && (
                  <div className="bg-muted p-3 rounded-lg">
                    <div className="font-semibold text-foreground mb-2">üìã Tarea</div>
                    <div className="text-sm">
                      Estado: {selectedEvent.completed ? 
                        <span className="text-emerald-500 font-semibold">‚úì Completada</span> : 
                        <span className="text-amber-500 font-semibold">‚è≥ Pendiente</span>
                      }
                    </div>
                  </div>
                )}
                
                {!selectedEvent?.isTask && selectedEvent?.start && (
                  <div>
                    <div className="font-semibold text-foreground">üìÖ Fecha y hora</div>
                    <div className="text-base mt-1">
                      {new Date(selectedEvent.start).toLocaleString('es-BO', {
                        weekday: 'long',
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        timeZone: 'America/La_Paz'
                      })}
                      {selectedEvent?.end && ` - ${new Date(selectedEvent.end).toLocaleString('es-BO', {
                        hour: '2-digit',
                        minute: '2-digit',
                        timeZone: 'America/La_Paz'
                      })}`}
                    </div>
                  </div>
                )}
                
                {selectedEvent?.location && (
                  <div>
                    <div className="font-semibold text-foreground">üìç Ubicaci√≥n</div>
                    <div className="text-base mt-1">{selectedEvent.location}</div>
                  </div>
                )}
                
                {selectedEvent?.description && selectedEvent.description !== 'Sin descripci√≥n' && (
                  <div>
                    <div className="font-semibold text-foreground">üìù Descripci√≥n</div>
                    <div className="text-base mt-1 whitespace-pre-wrap">{selectedEvent.description}</div>
                  </div>
                )}
              </div>
          <div className="flex gap-2 justify-end mt-4">
            <Button variant="outline" onClick={() => setShowEventDialog(false)}>
              Cerrar
            </Button>
            {googleAuth.isSignedIn && (
              <>
                <Button 
                  variant="destructive"
                  onClick={handleDeleteEvent}
                  disabled={isSubmitting}
                >
                  {isSubmitting ? 'Eliminando...' : 'Eliminar'}
                </Button>
                <Button 
                  variant="default"
                  onClick={handleEditEvent}
                  disabled={isSubmitting}
                >
                  Editar
                </Button>
                {selectedEvent?.isTask && !selectedEvent.completed && (
                  <Button 
                    variant="default"
                    onClick={handleCompleteTask}
                    disabled={isSubmitting}
                  >
                    {isSubmitting ? 'Marcando...' : 'Completar'}
                  </Button>
                )}
              </>
            )}
          </div>
        </DialogContent>
      </Dialog>

      <Dialog open={showAddDialog} onOpenChange={setShowAddDialog}>
        <DialogContent className="max-w-lg">
          <DialogHeader>
            <DialogTitle className="text-xl">{selectedEvent ? 'Editar evento' : 'A√±adir evento al calendario'}</DialogTitle>
          </DialogHeader>
          <div className="text-sm mb-4 text-muted-foreground">
            üìÖ {selectedDate?.toLocaleDateString('es-BO', {
              weekday: 'long',
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              timeZone: 'America/La_Paz'
            })}
          </div>
          
          {!googleAuth.isSignedIn ? (
            <div className="bg-muted p-4 rounded-lg space-y-3">
              <p className="text-sm text-muted-foreground">
                Para crear eventos directamente desde aqu√≠, necesitas conectar tu cuenta de Google.
              </p>
              <Button onClick={googleAuth.signIn} className="w-full">
                Conectar Google Calendar
              </Button>
            </div>
          ) : (
            <div className="space-y-4">
              <div>
                <Label htmlFor="title">T√≠tulo *</Label>
                <Input
                  id="title"
                  value={formData.title || ''}
                  onChange={(e) => {
                    console.log('Cambiando t√≠tulo a:', e.target.value);
                    const newFormData = { ...formData, title: e.target.value };
                    console.log('Nuevo formData:', newFormData);
                    setFormData(newFormData);
                  }}
                  placeholder="T√≠tulo de la tarea"
                  className="mt-1"
                />
              </div>

              <div>
                <Label htmlFor="description">Descripci√≥n</Label>
                <Textarea
                  id="description"
                  value={formData.description || ''}
                  onChange={(e) => setFormData({ ...formData, description: e.target.value })}
                  placeholder="Detalles adicionales..."
                  className="mt-1"
                  rows={3}
                />
              </div>
            </div>
          )}
          
          <div className="flex gap-2 justify-end mt-4">
            <Button variant="outline" onClick={() => {
              setShowAddDialog(false);
              setSelectedEvent(null);
            }}>
              Cancelar
            </Button>
            {googleAuth.isSignedIn && (
              <Button onClick={selectedEvent ? handleUpdateEvent : handleCreateEvent} disabled={isSubmitting}>
                {isSubmitting ? (selectedEvent ? 'Actualizando...' : 'Creando...') : (selectedEvent ? 'Actualizar' : 'Crear')}
              </Button>
            )}
          </div>
        </DialogContent>
      </Dialog>
    </>
  );
}
